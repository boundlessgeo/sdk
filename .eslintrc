{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb",
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "no-console": ["error", {
            "allow" : ["warn", "error"]
        }],
        "no-plusplus" : ["error", {
            "allowForLoopAfterthoughts": true,
        }],
        "camelcase": 0
    },
    "settings" : {
        "import/resolver": {
            "webpack" : {
                "config" : "webpack-dev-server.config.js"
            }
        }
    }
}
